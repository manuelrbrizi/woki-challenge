					],
					"path": [
						"woki",
						"bookings",
						":id"
					],
					"variable": [
						{
							"key": "id",
							"value": "BK_12345678",
							"description": "Booking ID"
						}
					]
				},
				"description": "Cancel a booking by ID. Returns 204 No Content on success."
			},
			"response": []
