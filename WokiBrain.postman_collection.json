		{
			"name": "Create Booking",
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					},
					{
						"key": "Idempotency-Key",
						"value": "{{$randomUUID}}",
						"description": "Optional: Ensures idempotent operations (60s TTL)"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n  \"restaurantId\": \"R1\",\n  \"sectorId\": \"S1\",\n  \"partySize\": 5,\n  \"durationMinutes\": 90,\n  \"date\": \"2025-10-22\",\n  \"windowStart\": \"20:00\",\n  \"windowEnd\": \"23:45\"\n}",
					"options": {
						"raw": {
							"language": "json"
						}
					}
				},
				"url": {
					"raw": "{{baseUrl}}/woki/bookings",
					"host": [
						"{{baseUrl}}"
					],
					"path": [
						"woki",
						"bookings"
					]
				},
				"description": "Create a new booking. The system will automatically select the best available table(s) using WokiBrain selection strategy."
			},
			"response": []
		},
