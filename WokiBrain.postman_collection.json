{
	"info": {
		"_postman_id": "wokibrain-api-collection",
		"name": "WokiBrain API",
		"description": "WokiBrain - A compact booking engine for restaurants",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "Discover Seats",
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{baseUrl}}/woki/discover?restaurantId=R1&sectorId=S1&date=2025-10-22&partySize=5&duration=90",
					"host": [
						"{{baseUrl}}"
					],
					"path": [
						"woki",
						"discover"
					],
					"query": [
						{
							"key": "restaurantId",
							"value": "R1",
							"description": "Restaurant ID"
						},
						{
							"key": "sectorId",
							"value": "S1",
							"description": "Sector ID"
						},
						{
							"key": "date",
							"value": "2025-10-22",
							"description": "Date in YYYY-MM-DD format"
						},
						{
							"key": "partySize",
							"value": "5",
							"description": "Number of people"
						},
						{
							"key": "duration",
							"value": "90",
							"description": "Duration in minutes (multiple of 15)"
						},
						{
							"key": "windowStart",
							"value": "20:00",
							"description": "Optional: Start time in HH:mm format",
							"disabled": true
						},
						{
							"key": "windowEnd",
							"value": "23:45",
							"description": "Optional: End time in HH:mm format",
							"disabled": true
						},
						{
							"key": "limit",
							"value": "10",
							"description": "Optional: Maximum number of candidates",
							"disabled": true
						}
					]
				},
				"description": "Discover available seats for a party. Returns candidates (single tables or combos) that can accommodate the party size for the specified duration."
			},
			"response": []
		},
